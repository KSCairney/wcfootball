<p id="notice"><%= notice %></p>

<h1>Quarter-Finals</h1>

<table>
  <thead>
    <tr>
      <th>Quarter-Final Game 1</th>
      <th>Quarter-Final Game 2</th>
      <th>Quarter-Final Game 3</th>
      <th>Quarter-Final Game 4</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @qf_winners.each do |qf_winner| %>
      <tr>
        <td><div class="choice"><% @teams.where(:name => qf_winner.qf1_w).each do |team| %><%= image_tag(team.flag) %> <%= qf_winner.qf1_w %><% end %></td>
        <td><div class="choice"><% @teams.where(:name => qf_winner.qf2_w).each do |team| %><%= image_tag(team.flag) %> <%= qf_winner.qf2_w %><% end %></td>
        <td><div class="choice"><% @teams.where(:name => qf_winner.qf3_w).each do |team| %><%= image_tag(team.flag) %> <%= qf_winner.qf3_w %><% end %></td>
        <td><div class="choice"><% @teams.where(:name => qf_winner.qf4_w).each do |team| %><%= image_tag(team.flag) %> <%= qf_winner.qf4_w %><% end %></td>
        <td><%= qf_winner.user.first_name %></td>
        <td><%= link_to 'Show', qf_winner %></td>
        <td><%= link_to 'Edit', edit_qf_winner_path(qf_winner) %></td>
        <td><%= link_to 'Destroy', qf_winner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Qf winner', new_qf_winner_path %>
