<p id="notice"><%= notice %></p>

<h1>Listing Test Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Team</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if signed_in? && current_user.admin? %>
      <% @test_groups.each do |test_group| %>
        <tr>
          <td><%= test_group.name %></td>
          <td><%= test_group.user %></td>
          <td><%= test_group.team %></td>
          <td><%= test_group.email %></td>
          <td><%= link_to 'Show', test_group %></td>
          <td><%= link_to 'Edit', edit_test_group_path(test_group) %></td>
          <td><%= link_to 'Destroy', test_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

