<p id="notice"><%= notice %></p>

<h1>Semi-Finals</h1>

<table>
  <thead>
    <tr>
      <th>Semi Final Game 1</th>
      <th>Semi Final Game 2</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sf_winners.each do |sf_winner| %>
      <tr>
        <td><div class="choice"><% @teams.where(:name => sf_winner.sf1_w).each do |team| %><%= image_tag(team.flag) %> <%= sf_winner.sf1_w %><% end %></td>
        <td><div class="choice"><% @teams.where(:name => sf_winner.sf2_w).each do |team| %><%= image_tag(team.flag) %> <%= sf_winner.sf2_w %><% end %></td>
        <td><%= sf_winner.user.first_name %></td>
        <td><%= link_to 'Show', sf_winner %></td>
        <td><%= link_to 'Edit', edit_sf_winner_path(sf_winner) %></td>
        <td><%= link_to 'Destroy', sf_winner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

