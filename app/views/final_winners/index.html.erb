<p id="notice"><%= notice %></p>

<h1>Final</h1>

<table>
  <thead>
    <tr>
      <th>The World Cup Final</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @final_winners.each do |final_winner| %>
      <tr>
        <td><div class="choice"><% @teams.where(:name => final_winner.champion).each do |team| %><%= image_tag(team.flag) %> <%= final_winner.champion %><% end %></td>
        <td><%= final_winner.user.first_name %></td>
        <td><%= link_to 'Show', final_winner %></td>
        <td><%= link_to 'Edit', edit_final_winner_path(final_winner) %></td>
        <td><%= link_to 'Destroy', final_winner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if signed_in? && current_user.admin? %>
  <%= link_to 'New Final winner', new_final_winner_path %>
<% end %>